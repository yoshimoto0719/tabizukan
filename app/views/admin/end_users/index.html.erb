<h1>会員一覧</h1>

<table class="table table-hover">

    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @end_users.each do |end_user| %>
        <tr class="light-text">
          <td><%= end_user.id %></td>
          <td class="text">
            <%= link_to admin_end_user_path(end_user), class: "text-dark" do %>
              <%= end_user.last_name %><%= end_user.first_name %>
            <% end %>
          </td>
          <td>
            <%= end_user.email %>
          </td>
          <td>
            <% if end_user.is_deleted %>
              <span>退会</span>
            <% else %>
              <span class="text-success text">有効</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>

</table>
