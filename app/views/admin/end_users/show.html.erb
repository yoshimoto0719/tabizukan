<h1 class="page_title ml-3 mb-3">Users Information</h1>

<table class="eu_table table-hover">
        <tr>
          <th class="w-25 text">会員ID</th>
          <td class="light-text"><%= @end_user.id %></td>
        </tr>
        <tr>
          <th class="text">氏名</th>
          <td class="light-text"><%= @end_user.last_name + @end_user.first_name %></td>
        </tr>
        <tr>
          <th class="text">フリガナ</th>
          <td class="light-text"><%= @end_user.last_name_kana + @end_user.first_name_kana %></td>
        </tr>
        <tr>
          <th class="text">メールアドレス</th>
          <td class="light-text"><%= @end_user.email %></td>
        </tr>
        <tr>
          <th class="text">会員ステータス</th>
          <td class="text">
            <% if @end_user.is_deleted %>
              <span>退会</span>
            <% else %>
              <span class="text-success">有効</span>
            <% end %>
          </td>
        </tr>
</table>

    <div class="text-center pt-3">
      <%= link_to "Edit", edit_admin_end_user_path(@end_user.id), class: "btn btn-success mr-4 col-2" %>
      <%#= link_to "コメント一覧を見る", post_comment_path, class: "btn btn-primary ml-5" %>
    </div>