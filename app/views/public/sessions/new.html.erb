<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン",class: "btn btn-sm btn-primary " %>
  </div>

  <div class="row">
    <div class="col-xl-4 ml-4">
      <h4 style="background-color:#dcdcdc;">会員登録がお済みでない方</h4>
    </div>
  </div>
  <div class= "row justify-content-center"><%=link_to "こちら",end_user_registration_path %>から新規登録を行ってください。</div>
<% end %>


