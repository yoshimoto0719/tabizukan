<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="container">
  <div class="card-container">
    <div class="card-body">
      <h3 class="card-title text-center mb-4 mt-1">Log In</h3>

  <div class="field text-center">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'email' %>
  </div>

  <div class="field text-center">
    <%= f.password_field :password, autocomplete: "current-password", placeholder:'password' %>
  </div>

  <div class="actions text-center mt-3">
    <%= f.submit "ログイン",class: "btn btn-sm btn-primary" %>
  </div>

  <div class="row mt-3">
    <div>
      <h4>会員登録がお済みでない方</h4>
    </div>
  </div>
  <div class= "row justify-content-center mt-3">新規登録は<%=link_to "こちら",new_end_user_registration_path %></div>

    </div>
  </div>
</div>

<% end %>


