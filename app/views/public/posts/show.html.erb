<h1>投稿詳細画面</h1>

    <h4>画像</h4>
      <%= image_tag @post.image, size: "200x200" %>
    <h4>場所</h4>
      <%= @post.location %>
    <h4>説明</h4>
      <%= @post.description %>

    <%= link_to "編集する", edit_post_path(@post), class: "btn btn-success" %>
    <%= link_to "削除", post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>