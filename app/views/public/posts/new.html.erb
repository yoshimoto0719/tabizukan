<h1 class="page_title ml-3">Form</h1>
  <div class="container">
  <%= form_with model: @post do |f| %>
    <%= render 'layouts/error_messages', resource: f.object %>
    <h4>Image</h4>
      <%= f.file_field :image, accept: "image/*" %>
  <div class="check_box pt-3">
    <h4>国内/海外</h4>
      <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
       <div>
         <%= tag.label do %>
           <%= tag.check_box %>
           <%= tag.text %>
         <% end %>
       </div>
      <% end %>
  </div>
    <h4>Location</h4>
      <%= f.text_field :location %>
    <h4>Fee</h4>
      ¥<%= f.text_field :cost %>
    <h4>Schedule</h4>
      <%= f.text_field :day1 %>泊<%= f.text_field :day2 %>日
    <h4>Information</h4>
      <%= f.text_area :description %>
    <%= f.submit 'Post' %>
  <% end %>
  </div>