<h1 class="page_title">投稿編集画面</h1>

  <%= form_with model: @post do |f| %>
    <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
      <div class="check_box">
    <h4>国内/海外</h4>
      <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
       <div>
         <%= tag.label do %>
           <%= tag.check_box %>
           <%= tag.text %>
         <% end %>
       </div>
      <% end %>
  </div>
    <h4>場所</h4>
      <%= f.text_field :location %>
    <h4>料金</h4>
      ¥<%= f.text_field :cost %>
    <h4>スケジュール</h4>
      <%= f.text_field :day1 %>泊<%= f.text_field :day2 %>日
    <h4>説明</h4>
      <%= f.text_area :description %>
    <%= f.submit '保存' %>
  <% end %>